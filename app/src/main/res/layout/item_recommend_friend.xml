<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgRecommandProfile"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtRecommandName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgRecommandProfile" />

    <ImageView
        android:id="@+id/btnMatch"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/baseline_circle_24"
        android:backgroundTint="@android:color/holo_red_dark"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSkip"
        app:srcCompat="@drawable/ic_love_white" />

    <ImageView
        android:id="@+id/btnSkip"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/baseline_circle_24"
        android:backgroundTint="@color/material_dynamic_neutral30"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRecommandName"
        app:srcCompat="@drawable/ic_skip" />

    <ImageView
        android:id="@+id/icBoy"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/baseline_circle_24"
        android:backgroundTint="@color/selected_button_color"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtRecommandName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtRecommandName"
        app:srcCompat="@drawable/ic_boy" />

    <ImageView
        android:id="@+id/icGirl"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/baseline_circle_24"
        android:backgroundTint="?attr/colorTertiaryFixedDim"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtRecommandName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtRecommandName"
        app:layout_constraintVertical_bias="0.466"
        app:srcCompat="@drawable/ic_girl" />

</androidx.constraintlayout.widget.ConstraintLayout>